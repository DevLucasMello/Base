@model List<Core.Models.Oracao.PedidoOracaoListModel>
@{
    ViewBag.Title = "PedidosOração";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<!-- BEGIN PAGE HEAD -->
<div class="page-head">
    <div class="container">
        <!-- BEGIN PAGE TITLE -->
        <div class="page-title">
            <h1>Pedidos de Oração <small>Veja seus pedidos de oração</small></h1>
        </div>
        <!-- END PAGE TITLE -->
    </div>
</div>
<!-- END PAGE HEAD -->
<div class="page-content">
    <div class="container">

        <!-- BEGIN PAGE CONTENT INNER -->
        <div class="row">
            <div class="col-md-12">
                <!-- BEGIN EXAMPLE TABLE PORTLET-->
                <div class="portlet light">
                    <div class="portlet-title">
                        <div class="caption">
                            <span class="caption-subject font-green-sharp bold uppercase">Pedidos</span>
                        </div>
                    </div>
                    <div class="portlet-body">
                        <div class="table-toolbar">
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="btn-group">
                                        <a id="sample_Detalhesable_1_new" class="btn yellow" href="@Url.Action("NovaOracao", "Oracao")">
                                            Pedir uma oração <i class="fa fa-plus"></i>
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                      
                        @foreach (Core.Models.Oracao.PedidoOracaoListModel pedido in Model)
                        {
                            if (Model.IndexOf(pedido) % 4 == 0)
                            {
                                @:<div class="row">
                            }
                            <div class="col-md-3">
                                <div class="top-news">
                                    <a href="@Url.Action("Detalhe", "Oracao", new { id = @pedido.ID })" class="btn blue">
                                        <span>
                                            @pedido.Titulo
                                        </span>
                                        <em>Pedido em: @pedido.DataCriacao.ToShortDateString()</em>
                                        <em>
                                            <i class="fa fa-tags"></i>

                                        </em>
                                        <i class="fa fa-music top-news-icon"></i>
                                    </a>
                                </div>
                            </div>
                            if (Model.IndexOf(pedido) % 4 == 3 || Model.IndexOf(pedido) == Model.Count())
                            {
                                @:</div>
                            }
                        }
                    </div>
                </div>
                <!-- END EXAMPLE TABLE PORTLET-->
            </div>
        </div>
        <!-- END PAGE CONTENT -->
    </div>
</div>
<!-- END PAGE CONTENT -->
