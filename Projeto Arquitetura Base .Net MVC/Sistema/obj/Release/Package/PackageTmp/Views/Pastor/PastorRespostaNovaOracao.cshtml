@model Core.Models.Oracao.PastorRespostaNovaOracao

@{
    ViewBag.Title = "PastorRespostaNovaOracao";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="page-container">
    @if (!Model.foiRespondida)
    {
    <!-- BEGIN PAGE HEAD -->
        <div class="page-head">
            <div class="container">
                <!-- BEGIN PAGE TITLE -->
                <div class="page-title">
                    <h1>Responder Pedido de Oração </h1>
                    <br />
                    <h1>Título: @Model.tituloOracao</h1>
                </div>
                <!-- END PAGE TITLE -->
            </div>
        </div>
    <!-- END PAGE HEAD -->
    <!-- BEGIN PAGE CONTENT -->
        using (Html.BeginForm("PastorRespostaNovaOracao", "Pastor", FormMethod.Post, new { id = "formRespostaPastorNovaOracao" }))
        {
            <div class="page-content">
                <div class="container">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="portlet light">
                                <div class="portlet-title">
                                    <div class="caption">
                                        <i class="fa  fa-comments-o font-blue-sharp"></i>
                                        <span class="caption-subject font-blue-sharp">Mensagem de Pedido de Oração</span>
                                    </div>
                                </div>
                                <div class="portlet-body">

                                    @Html.TextBoxFor(m => m.ID, new { @hidden = "hidden" })
                                    @{
                                        string tipoMensagem = Model.Tipo.ToString();
                                        if (tipoMensagem.Equals("Texto"))
                                        {
                                    <div class="form-group form-md-line-input">
                                        @Html.DisplayTextFor(s => s.mensagemGravacaoPedidoOracao)
                                    </div>

                                        }
                                        else {
                                    <audio controls id="audioPastor" src=@Model.mensagemGravacaoPedidoOracao></audio>
                                        }
                                    }

                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="portlet light">
                                <div class="portlet-title">
                                    <div class="caption">
                                        <i class="fa  fa-comments-o font-blue-sharp"></i>
                                        <span class="caption-subject font-blue-sharp">Grave a Resposta do Pedido de Oração</span>
                                    </div>
                                </div>
                                <div class="portlet-body">
                                    <audio controls id="audio"></audio>
                                    @Html.TextBoxFor(m => m.GravacaoOracao, new { @hidden = "hidden" })
                                    <div style="margin:10px;">
                                        <div class="btn-group">
                                            <button type="button" id="record" class="btn red"><i class="fa fa-file-audio-o"></i> Gravar</button>
                                            <button type="button" id="pause" class="btn green disabled"><i class="fa fa-stop"></i> Pausar</button>
                                            <button type="button" id="stop" class="btn purple disabled"><i class="fa  fa-step-backward"></i> Reset</button>
                                            <button type="button" id="mp3Pastor" class="btn blue"><i class="fa fa-send-o"></i> Enviar</button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>

                <!-- END PAGE CONTENT INNER -->
            </div>
                                            }
                                        }
                                        else {
 <!-- BEGIN PAGE HEAD -->
                                            <div class="page-head">
                                                <div class="container">
                                                    <!-- BEGIN PAGE TITLE -->
                                                    <div class="page-title">
                                                        <h1>Esta oração já foi respondida </h1>
                                                        <br />
                                                        <h1>Título: @Model.tituloOracao</h1>
                                                    </div>
                                                    <!-- END PAGE TITLE -->
                                                </div>
                                            </div>
    <!-- END PAGE HEAD -->
                                            <div class="page-content">
                                                <div class="container">
                                                    <div class="row">
                                                        <div class="col-md-6">
                                                            <div class="portlet light">
                                                                <div class="portlet-title">
                                                                    <div class="caption">
                                                                        <i class="fa  fa-comments-o font-blue-sharp"></i>
                                                                        <span class="caption-subject font-blue-sharp">Mensagem de Pedido de Oração</span>
                                                                    </div>
                                                                </div>
                                                                <div class="portlet-body">
                                                                    @{
                                                                        string tipoMensagem = Model.Tipo.ToString();
                                                                        if (tipoMensagem.Equals("Texto"))
                                                                        {
                                                                            <div class="form-group form-md-line-input">
                                                                                @Html.DisplayTextFor(s => s.mensagemGravacaoPedidoOracao)
                                                                            </div>

                                                                        }
                                                                        else {
                                                                            <audio controls id="audioPastor" src=@Model.mensagemGravacaoPedidoOracao></audio>
                                                                        }
                                                                    }

                                                                </div>
                                                            </div>
                                                        </div>
                                                        <div class="col-md-6">
                                                            <div class="portlet light">
                                                                <div class="portlet-title">
                                                                    <div class="caption">
                                                                        <i class="fa  fa-comments-o font-blue-sharp"></i>
                                                                        <span class="caption-subject font-blue-sharp">Grave a Resposta do Pedido de Oração</span>
                                                                    </div>
                                                                </div>
                                                                <div class="portlet-body">
                                                                    <audio controls id="audio" src=@Model.GravacaoOracao></audio>
                                                                    @Html.TextBoxFor(m => m.GravacaoOracao, new { @hidden = "hidden" })
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>

                                                </div>
                                                <!-- END PAGE CONTENT INNER -->
                                            </div>
                                                                        }
</div>
