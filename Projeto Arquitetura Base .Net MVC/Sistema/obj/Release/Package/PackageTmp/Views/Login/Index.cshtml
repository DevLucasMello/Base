@model Core.Models.Usuarios.AutenticacaoModel

@{
    ViewBag.Title = "Acessar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!-- BEGIN PAGE LEVEL STYLES -->
<link href="@Url.Content("~/Content/Themes/metronic/assets/admin/pages/css/login.css")" rel="stylesheet" type="text/css">
<!-- END PAGE LEVEL SCRIPTS -->
<link rel="shortcut icon" href="favicon.ico">

<!-- END HEAD -->
<!-- BEGIN BODY -->
<div class="page-content">
    <div class="container">
        <div class="login">
            <!-- BEGIN LOGIN -->
            <div class="content">
                <div class="portlet light">
                    <!-- BEGIN LOGIN FORM -->
                    @using (Html.BeginForm("Entrar", "Login", FormMethod.Post, new { @id = "LoginForm", @class = "login-form", @defaultbutton = "loginButton" }))
                    {
                        <h3 class="form-title">Login</h3>
                        <div class="alert alert-danger display-hide">
                            <button class="close" data-close="alert"></button>
                            <span>
                                Enter any username and password.
                            </span>
                        </div>
                        <div class="form-group">
                            <!--ie8, ie9 does not support html5 placeholder, so we just show field title for that-->
                            <label class="control-label visible-ie8 visible-ie9">Username</label>
                            @Html.TextBoxFor(model => model.email, new { @class = "form-control form-control-solid placeholder-no-fix", @type = "text", @placeholder = "Usuário" })
                        </div>
                        <div class="form-group">
                            <label class="control-label visible-ie8 visible-ie9">Password</label>
                            @Html.TextBoxFor(model => model.senha, new { @class = "form-control form-control-solid placeholder-no-fix", @type = "password", @autocomplete = "off", @placeholder = "senha" })
                        </div>
                        <div class="form-actions">
                            <button type="submit" id="LoginButton" value="Submit" class="btn btn-success uppercase">Login</button>
                            <label class="rememberme check">
                                <input type="checkbox" name="remember" value="1">Manter Conectado
                            </label>
                            <a href="javascript:;" id="forget-password" class="forget-password">Esqueci minha senha</a>
                        </div>
                    }
                    <!-- END LOGIN FORM -->
                </div>
            </div>
        </div>
    </div>
    <!-- END LOGIN -->
    <!-- BEGIN JAVASCRIPTS(Load javascripts at bottom, this will reduce page load time) -->
    <!-- BEGIN PAGE LEVEL PLUGINS -->
    <script src="@Url.Content("~/Content/Themes/assets/global/plugins/jquery-validation/js/jquery.validate.min.js")" type="text/javascript"></script>
    <!-- END PAGE LEVEL PLUGINS -->
    <!-- BEGIN PAGE LEVEL SCRIPTS -->
    <script src="@Url.Content("~/Content/Themes/assets/global/scripts/metronic.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Content/Themes/assets/admin/layout/scripts/layout.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Content/Themes/assets/admin/layout/scripts/demo.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Content/Themes/assets/admin/pages/scripts/login.js")" type="text/javascript"></script>
    <!-- END PAGE LEVEL SCRIPTS -->
    <!-- END JAVASCRIPTS -->
</div>
